@model IEnumerable<Event>
@{
    ViewData["Title"] = "Event Page Travel Planner";

    int id = Convert.ToInt32(ViewContext.RouteData.Values["id"]);
}
<h2>Event Page Travel Planner</h2>
<p>Travel Planner for the Band Performances!</p>
<div class="text-center">
    <h1 class="display-4">Event Schedule</h1>
</div>

<a asp-action="Add" class="ml-3">Add Event</a>

<table class="table">
    <thead>
        <tr><th>Event Id</th><th>Event Name</th><th>Event City</th><th>Event Date</th></tr>
    </thead>
    <tbody>
        @foreach (Event e in ViewBag.Events)
        {
            <tr>
                <td>@e.EventId</td>
                <td>@e.EventName</td>
                <td>@e.EventCity</td>
                <td>@e.EventDate</td>
                <td>
                    <a asp-action="Edit" asp-controller="Event" asp-route-id="@e.EventId"
                       class="btn btn-outline-dark">Edit</a>
                    <a asp-action="Delete" asp-controller="Event" asp-route-id="@e.EventId"
                       class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
