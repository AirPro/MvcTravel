@model Event
@{
    ViewData["Title"] = "Add Event";
}
<h1 class="display-4">Add Event</h1>
<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="EventName"></label>
        <input asp-for="EventName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EventCity"></label>
        <input asp-for="EventCity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-dark">Add</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>
